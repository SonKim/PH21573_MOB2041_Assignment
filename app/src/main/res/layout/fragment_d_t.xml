<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.DTFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="THỐNG KÊ DOANH THU"
        android:textColor="@color/momo"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edBatDau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="Chọn ngày bắt đầu" />

    <EditText
        android:id="@+id/edKetThuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="Chọn ngày kết thúc" />

    <Button
        android:id="@+id/btnThongKe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/momo"
        android:text="THỐNG KÊ"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvDoanhThu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TỔNG DOANH THU"
        android:textColor="@color/momo"
        android:textSize="30sp"
        android:textStyle="bold" />
</LinearLayout>